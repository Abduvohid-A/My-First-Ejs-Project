<%- include('./partials/header.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Otp Form</h1>
        </div>
        <div class="card-body">
            <form method="post" action="/otp">
            
                <div class="col-12">
                    <label for="otp" class="form-label">One Time Password</label>
                    <input type="text" class="form-control" id="otp" name="otp" placeholder="Your One Time Password">
                </div>
                <button type="submit" class="btn btn-primary mt-4">Register User</button>
            </form>
        </div>
        <div class="card-footer">
            <% if (message) {%>
                <p class="alert alert-danger"><%- message %></p>
                <% }%>
                    <!-- p tegiga  backend dan message qaytadi-->
        </div>
    </div>
</div>